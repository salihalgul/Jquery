@{
    ViewBag.Title = "Home Page";
}

    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>

        <title></title>
        <style>
            #noneSelected{
                position:absolute;
                top:10px;
                left:10px;
                width:180px;
                height:180px;
                background-color:#884333;
                border-width:1px;
                border-style:dotted;
                border-color:black;
                padding:10px;
            }
            #selected {
                position: absolute;
                top: 10px;
                left: 200px;
                width: 180px;
                height: 180px;
                background-color: #884333;
                border-width: 1px;
                border-style: dotted;
                border-color: black;
                padding: 10px;
            }
        </style>
       
    </head>
    <body>
        <div id="noneSelected">
            <button id="btnDefault" onclick="moveButton(this)" type="button">Button1</button>
            <button id="btnPrimary" onclick="moveButton(this)" type="button">Button2</button>
            <button id="btnDanger" onclick="moveButton(this)" type="button">Button3</button>
        </div>
        <div id="selected">

        </div>



        <script>
            function moveButton(can) {
                if ($(can).parent().attr("id") == "noneSelected") {
                    $(can).detach().appendTo("#selected");
                } else {
                    $(can).detach().appendTo("#noneSelected");
                }
            }
        </script>

    </body>
    </html>